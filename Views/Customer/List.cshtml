@using LibraryManagement.ViewModel
@model IEnumerable<CustomerViewModel>


<a class="btn btn-success mt-5" style="margin: 10px" asp-controller="Customer" asp-action="Create">Create new customer</a>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Borrowed books count</th>
            <th>Show borrowed books</th>
            <th>Edit customer</th>
            <th>Delete customer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customerViewModel in Model)
        {
            <tr>
                <td>@customerViewModel.Customer.CustomerId</td>
                <td>@customerViewModel.Customer.Name</td>
                <td>@customerViewModel.BookCount</td>
                @if (customerViewModel.BookCount == 0)
                {
                    <td><a class="btn btn-default" asp-area="">Show</a></td>
                }
                else
                {
                    <td><a class="btn btn-info" asp-area="" asp-controller="Book" asp-action="List" asp-route-borrowerId="@customerViewModel.Customer.CustomerId">Show</a></td>
                }
                <td><a class="btn btn-info" asp-area="" asp-controller="Customer" asp-action="Update" asp-route-id="@customerViewModel.Customer.CustomerId">Edit</a></td>
                <td><a class="btn btn-danger" asp-area="" asp-controller="Customer" asp-action="Delete" asp-route-id="@customerViewModel.Customer.CustomerId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
